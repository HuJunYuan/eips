@model EIP.Entity.LessonSchedule

@{
    Layout = null;
}
@section head{
}
<form id="form_LessonSchedule" class="easyui-form" method="post" data-options="">
        
            <!--课程安排ID-->
            @Html.HiddenFor(p => p.LSId)    
        
            <!--用来识别课程信息-->
            @Html.HiddenFor(p => p.LIId)    
        
            <!--教室信息Id-->
            @Html.HiddenFor(p => p.ClassroomId)    
        
            <!--班级任课教师数据ID,确定任课教师和上课学生
   -->
            @Html.HiddenFor(p => p.MTRId)    

        
            <div class="form-item">
                    @Html.CLDatetimeBoxFor(p => p.LessonTime, new DatetimeBox() { Label = " ：", Style = "width:90%;" })
            </div>

        
            <div class="form-item">
                    @Html.CLTextBoxFor(p => p.Other, new TextBox() { Label = "备注信息 ：", Style = "width:90%;" })
            </div>

        
            <div class="form-item">
                    @Html.CLTextBoxFor(p => p.Classroom, new TextBox() { Label = "教室信息
    ：", Style = "width:90%;" })
            </div>

        
            <div class="form-item">
                    @Html.CLTextBoxFor(p => p.LessonInfo, new TextBox() { Label = "课程信息表 ：", Style = "width:90%;" })
            </div>

        
            <div class="form-item">
                    @Html.CLTextBoxFor(p => p.entorToRemo, new TextBox() { Label = "用来记录每个班级的任课教师 ：", Style = "width:90%;" })
            </div>

</form>
<script type="text/javascript">

    function validate() {
        // 验证
        var isValid = $("#form_LessonSchedule").form("validate");
        if (!isValid) {
            App.showMessageBox('@MessageManager.GetMessage("E10060")', 2);
            return false;
        }
        return true;
    }

    //保存
    function save() {

        // 表单验证
        if (!validate()) return;

        // 表单数据提交
        var formData = $("#form_LessonSchedule").form("getData");
        App.action(App.getUrl("LessonSchedule/save"), formData,
            function (data) {
                //todo
            });

    }

    //关闭
    function closeBox() {

        window.App.showConfirm('@MessageManager.GetMessage("Q10030")',
            function () {
                window.App.CloseWindow();
            });
    }
</script>
