@model EIP.Entity.LessonInfo

@{
    Layout = "~/views/shared/_PersonCenterLayout.cshtml";
}
@section head{
    <link href="/Content/PersonalCenter/CSS/table.css?v=@ViewBag.Version" rel="stylesheet" />
}
<div>
    <div class="div-margin">
        <input type="button" id="Colse" class="form-btn" onclick="closeBox();" value="关闭" />
        
    </div>
    <div class="head-font">
        <b>课程信息表详情</b>
    </div>

    <table id="readonly" class="tables" cellpadding="0" cellspacing="0">
            
                <tr>
                    <td width="25%">
                        <label>用来识别课程信息</label>
                    </td>
                    <td>
                        @Html.DisplayFor(p => p.LIId)
                    </td>
                </tr>
            
            
                <tr>
                    <td width="25%">
                        <label>课程编号</label>
                    </td>
                    <td>
                        @Html.DisplayFor(p => p.LessonId)
                    </td>
                </tr>
            
            
                <tr>
                    <td width="25%">
                        <label>课程名字</label>
                    </td>
                    <td>
                        @Html.DisplayFor(p => p.LessonName)
                    </td>
                </tr>
            
            
                <tr>
                    <td width="25%">
                        <label></label>
                    </td>
                    <td>
                        @Html.DisplayFor(p => p.category)
                    </td>
                </tr>
            
            
                <tr>
                    <td width="25%">
                        <label>备注信息</label>
                    </td>
                    <td>
                        @Html.DisplayFor(p => p.Other)
                    </td>
                </tr>
            
            
                <tr>
                    <td width="25%">
                        <label>课程安排</label>
                    </td>
                    <td>
                        @Html.DisplayFor(p => p.LessonSchedules)
                    </td>
                </tr>
            
    </table>
</div>

<script type="text/javascript">

    mini.parse();


    //关闭
    function closeBox() {

        window.App.CloseWindow();
    }
</script>