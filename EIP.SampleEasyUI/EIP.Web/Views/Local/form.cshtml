@model EIP.Entity.Local

@{
    Layout = null;
}
@section head{
}
<form id="form_Local" class="easyui-form" method="post" data-options="">
        
            <!--记录地域表中的编号-->
            @Html.HiddenFor(p => p.LocalID)    
        
            <!--当前地域记录的父级LocalID
   -->
            @Html.HiddenFor(p => p.ParentId)    

        
            <div class="form-item">
                    @Html.CLTextBoxFor(p => p.LocalNum, new TextBox() { Label = "记录地域编号，类似邮编 ：", Style = "width:90%;" })
            </div>

        
            <div class="form-item">
                    @Html.CLTextBoxFor(p => p.LocalName, new TextBox() { Label = "记录地域的中文名 ：", Style = "width:90%;" })
            </div>

</form>
<script type="text/javascript">

    function validate() {
        // 验证
        var isValid = $("#form_Local").form("validate");
        if (!isValid) {
            App.showMessageBox('@MessageManager.GetMessage("E10060")', 2);
            return false;
        }
        return true;
    }

    //保存
    function save() {

        // 表单验证
        if (!validate()) return;

        // 表单数据提交
        var formData = $("#form_Local").form("getData");
        App.action(App.getUrl("Local/save"), formData,
            function (data) {
                //todo
            });

    }

    //关闭
    function closeBox() {

        window.App.showConfirm('@MessageManager.GetMessage("Q10030")',
            function () {
                window.App.CloseWindow();
            });
    }
</script>
