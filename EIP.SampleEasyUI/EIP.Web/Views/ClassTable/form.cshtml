@model EIP.Entity.ClassTable

@{
    Layout = null;
}
@section head{
}
<form id="form_ClassTable" class="easyui-form" method="post" data-options="">
        
            <!--班级ID-->
            @Html.HiddenFor(p => p.ClassID)    

        
            <div class="form-item">
                    @Html.CLTextBoxFor(p => p.ClassName, new TextBox() { Label = "班级名字 ：", Style = "width:90%;" })
            </div>

        
            <div class="form-item">
                    @Html.CLTextBoxFor(p => p.Students, new TextBox() { Label = "学生表 ：", Style = "width:90%;" })
            </div>

        
            <div class="form-item">
                    @Html.CLTextBoxFor(p => p.eacherClassRelationships, new TextBox() { Label = "老师班级表关系(TeacherClassRelationship) ：", Style = "width:90%;" })
            </div>

</form>
<script type="text/javascript">

    function validate() {
        // 验证
        var isValid = $("#form_ClassTable").form("validate");
        if (!isValid) {
            App.showMessageBox('@MessageManager.GetMessage("E10060")', 2);
            return false;
        }
        return true;
    }

    //保存
    function save() {

        // 表单验证
        if (!validate()) return;

        // 表单数据提交
        var formData = $("#form_ClassTable").form("getData");
        App.action(App.getUrl("/ClassTable/save"), formData,
            function (data) {
                //todo
            });

    }

    //关闭
    function closeBox() {

        window.App.showConfirm('@MessageManager.GetMessage("Q10030")',
            function () {
                window.App.CloseWindow();
            });
    }
</script>
