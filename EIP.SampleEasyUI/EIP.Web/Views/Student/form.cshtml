@model EIP.Entity.Student

@{
    Layout = null;
}
@section head{
}
<form id="form_Student" class="easyui-form" method="post" data-options="">
        
            <!--学生ID-->
            @Html.HiddenFor(p => p.StudentID)    

        
            <div class="form-item">
                    @Html.CLTextBoxFor(p => p.ClassID, new TextBox() { Label = "班级ID ：", Style = "width:90%;" })
            </div>

        
            <div class="form-item">
                    @Html.CLTextBoxFor(p => p.StudentName, new TextBox() { Label = "学生名字 ：", Style = "width:90%;" })
            </div>

        
            <div class="form-item">
                    @Html.CLTextBoxFor(p => p.Sex, new TextBox() { Label = "学生性别 ：", Style = "width:90%;" })
            </div>

        
            <div class="form-item">

                @Html.CLComboBoxFor(p => p.Age, new ComboBox() { Label = "学生年龄 ：", ParentCode =CommonConstant.CODETYPE_SEX })
            </div>

        
            <div class="form-item">
                    @Html.CLTextBoxFor(p => p.FatherName, new TextBox() { Label = "父亲名字(fatherName) ：", Style = "width:90%;" })
            </div>

        
            <div class="form-item">
                    @Html.CLTextBoxFor(p => p.MatherName, new TextBox() { Label = "母亲(matherName) ：", Style = "width:90%;" })
            </div>

        
            <div class="form-item">
                    @Html.CLTextBoxFor(p => p.HomeAddress, new TextBox() { Label = "家庭地址(HomeAddress) ：", Style = "width:90%;" })
            </div>

        
            <div class="form-item">
                    @Html.CLTextBoxFor(p => p.StudentTeacherRelationships, new TextBox() { Label = "学生老师关系表(StudentTeacherRelationship) ：", Style = "width:90%;" })
            </div>

        
            <div class="form-item">
                    @Html.CLTextBoxFor(p => p.ClassTable, new TextBox() { Label = "班级表 ：", Style = "width:90%;" })
            </div>

</form>
<script type="text/javascript">

    function validate() {
        // 验证
        var isValid = $("#form_Student").form("validate");
        if (!isValid) {
            App.showMessageBox('@MessageManager.GetMessage("E10060")', 2);
            return false;
        }
        return true;
    }

    //保存
    function save() {

        // 表单验证
        if (!validate()) return;

        // 表单数据提交
        var formData = $("#form_Student").form("getData");
        App.action(App.getUrl("Student/save"), formData,
            function (data) {
                //todo
            });

    }

    //关闭
    function closeBox() {

        window.App.showConfirm('@MessageManager.GetMessage("Q10030")',
            function () {
                window.App.CloseWindow();
            });
    }
</script>
