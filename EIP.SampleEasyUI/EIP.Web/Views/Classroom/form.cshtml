@model EIP.Entity.Classroom

@{
    Layout = null;
}
@section head{
}
<form id="form_Classroom" class="easyui-form" method="post" data-options="">

    <!--教室信息Id-->
    @Html.HiddenFor(p => p.ClassroomId)


    <div class="form-item">
        @Html.CLTextBoxFor(p => p.ClassroomName, new TextBox() { Label = "教室名 ：", Style = "width:90%;" })
    </div>


    <div class="form-item">
        @Html.CLTextBoxFor(p => p.Other, new TextBox() { Label = "备注 ：", Style = "width:90%;" })
    </div>

</form>
<script type="text/javascript">

    function validate() {
        // 验证
        var isValid = $("#form_Classroom").form("validate");
        if (!isValid) {
            App.showMessageBox('@MessageManager.GetMessage("E10060")', 2);
            return false;
        }
        return true;
    }

    //保存
    function save() {

        // 表单验证
        if (!validate()) return;

        // 表单数据提交
        var formData = $("#form_Classroom").form("getData");
        App.action(App.getUrl("/Classroom/save"), formData,
            function (data) {
                //todo
            });

    }

    //关闭
    function closeBox() {

        window.App.showConfirm('@MessageManager.GetMessage("Q10030")',
            function () {
                window.App.CloseWindow();
            });
    }
</script>
