@model EIP.Entity.eacher

@{
    Layout = null;
}
@section head{
}
<form id="form_eacher" class="easyui-form" method="post" data-options="">
        
            <!--老师ID-->
            @Html.HiddenFor(p => p.TeacherID)    

        
            <div class="form-item">
                    @Html.CLTextBoxFor(p => p.TeacherName, new TextBox() { Label = "老师名字 ：", Style = "width:90%;" })
            </div>

        
            <div class="form-item">
                    @Html.CLTextBoxFor(p => p.Sex, new TextBox() { Label = "老师性别(sex) ：", Style = "width:90%;" })
            </div>

        
            <div class="form-item">
                    @Html.CLTextBoxFor(p => p.Age, new TextBox() { Label = "老师年龄(age) ：", Style = "width:90%;" })
            </div>

        
            <div class="form-item">
                    @Html.CLTextBoxFor(p => p.Subject, new TextBox() { Label = "教学科目(subject) ：", Style = "width:90%;" })
            </div>

        
            <div class="form-item">
                    @Html.CLTextBoxFor(p => p.HomeAddress, new TextBox() { Label = " ：", Style = "width:90%;" })
            </div>

        
            <div class="form-item">
                    @Html.CLTextBoxFor(p => p.Phone, new TextBox() { Label = " ：", Style = "width:90%;" })
            </div>

        
            <div class="form-item">
                    @Html.CLTextBoxFor(p => p.StudentTeacherRelationships, new TextBox() { Label = "学生老师关系表(StudentTeacherRelationship) ：", Style = "width:90%;" })
            </div>

        
            <div class="form-item">
                    @Html.CLTextBoxFor(p => p.eacherClassRelationships, new TextBox() { Label = "老师班级表关系(TeacherClassRelationship) ：", Style = "width:90%;" })
            </div>

</form>
<script type="text/javascript">

    function validate() {
        // 验证
        var isValid = $("#form_eacher").form("validate");
        if (!isValid) {
            App.showMessageBox('@MessageManager.GetMessage("E10060")', 2);
            return false;
        }
        return true;
    }

    //保存
    function save() {

        // 表单验证
        if (!validate()) return;

        // 表单数据提交
        var formData = $("#form_eacher").form("getData");
        App.action(App.getUrl("eacher/save"), formData,
            function (data) {
                //todo
            });

    }

    //关闭
    function closeBox() {

        window.App.showConfirm('@MessageManager.GetMessage("Q10030")',
            function () {
                window.App.CloseWindow();
            });
    }
</script>
