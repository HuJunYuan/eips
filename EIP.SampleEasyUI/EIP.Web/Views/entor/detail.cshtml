@model EIP.Entity.entor

@{
    Layout = "~/views/shared/_PersonCenterLayout.cshtml";
}
@section head{
    <link href="/Content/PersonalCenter/CSS/table.css?v=@ViewBag.Version" rel="stylesheet" />
}
<div>
    <div class="div-margin">
        <input type="button" id="Colse" class="form-btn" onclick="closeBox();" value="关闭" />
        
    </div>
    <div class="head-font">
        <b>教师详情</b>
    </div>

    <table id="readonly" class="tables" cellpadding="0" cellspacing="0">
            
                <tr>
                    <td width="25%">
                        <label>教师代码</label>
                    </td>
                    <td>
                        @Html.DisplayFor(p => p.MId)
                    </td>
                </tr>
            
            
                <tr>
                    <td width="25%">
                        <label>教师职工号</label>
                    </td>
                    <td>
                        @Html.DisplayFor(p => p.MentorId)
                    </td>
                </tr>
            
            
                <tr>
                    <td width="25%">
                        <label>教师姓名</label>
                    </td>
                    <td>
                        @Html.DisplayFor(p => p.MentorName)
                    </td>
                </tr>
            
            
                <tr>
                    <td width="25%">
                        <label>性别</label>
                    </td>
                    <td>
                        @Html.DisplayFor(p => p.Sex)
                    </td>
                </tr>
            
            
                <tr>
                    <td width="25%">
                        <label>教师等级</label>
                    </td>
                    <td>
                        @Html.DisplayFor(p => p.MentorLevel)
                    </td>
                </tr>
            
            
                <tr>
                    <td width="25%">
                        <label>备注
   </label>
                    </td>
                    <td>
                        @Html.DisplayFor(p => p.Other)
                    </td>
                </tr>
            
            
    </table>
</div>

<script type="text/javascript">

    mini.parse();


    //关闭
    function closeBox() {
        $('#div-margin').dialog('close');
        $('#grid_entor').datagrid('reload');
    }
</script>